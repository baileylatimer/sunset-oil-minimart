{% comment %}
  V2 Footer Section - Sunset Oil Minimart
  Non-editable footer with location and business information
{% endcomment %}

<div class="v2-footer color-{{ section.settings.color_scheme }} section">
  <div class="page-width">
    <!-- Desktop Version -->
    <div class="v2-footer__desktop">
      <!-- Top Row -->
      <div class="v2-footer__row">
        <!-- Diamond W Logo -->
        <span class="v2-footer__icon-wrapper v2-footer__diamond-w-wrapper">
          {% render 'svg-diamond-w', class: 'v2-footer__icon v2-footer__diamond-w-icon' %}
        </span>
        <h2 class="v2-footer__text v2-footer__text--spacing">8906</h2>
        <!-- Coordinates Arrows -->
        <span class="v2-footer__icon-wrapper v2-footer__coordinates-wrapper v2-footer__coordinates-wrapper--spacing">
          {% render 'svg-coordinates', class: 'v2-footer__icon v2-footer__coordinates-icon' %}
        </span>
        <h2 class="v2-footer__text v2-footer__text--spacing">W SUNSET BLVD</h2>
        <!-- Star -->
        <span class="v2-footer__icon-wrapper v2-footer__star-wrapper v2-footer__star-wrapper--spacing">
          {% render 'svg-star', class: 'v2-footer__icon v2-footer__star-icon' %}
        </span>
        <h2 class="v2-footer__text">WEST HOLLYWOOD</h2>
        <!-- CA Flag -->
        <span class="v2-footer__icon-wrapper v2-footer__ca-state-wrapper">
          {% render 'svg-ca-state', class: 'v2-footer__icon v2-footer__ca-state-icon' %}
        </span>
      </div>
      
      <!-- Bottom Row -->
      <div class="v2-footer__row">
        <h2 class="v2-footer__text">PUMPING GAS SINCE</h2>
        <span class="v2-footer__icon-wrapper v2-footer__year-96-wrapper">
          {% render 'svg-96', class: 'v2-footer__icon v2-footer__year-96-icon' %}
        </span>
        <h2 class="v2-footer__text v2-footer__text--wide-spacing">PUSHING CULTURE UNTIL</h2>
        <!-- Infinity Symbol -->
        <span class="v2-footer__icon-wrapper v2-footer__infinity-wrapper">
          {% render 'svg-infinity', class: 'v2-footer__icon v2-footer__infinity-icon' %}
        </span>
      </div>
    </div>

    <!-- Mobile Version - Simplified -->
    <div class="v2-footer__mobile">
      <div class="v2-footer__mobile-container">
        <div class="v2-footer__mobile-row" style="height: 60px">
          <span class="v2-footer__icon-wrapper v2-footer__diamond-w-wrapper">
            {% render 'svg-diamond-w', class: 'v2-footer__icon v2-footer__diamond-w-icon v2-footer__diamond-w-icon--mobile' %}
          </span>
          <h2 class="v2-footer__text v2-footer__text--mobile-spacing">8906</h2>
          <span class="v2-footer__icon-wrapper v2-footer__coordinates-wrapper v2-footer__coordinates-wrapper--spacing">
            {% render 'svg-coordinates', class: 'v2-footer__icon v2-footer__coordinates-icon' %}
          </span>
        </div>
        <div class="v2-footer__mobile-row">
          <h2 class="v2-footer__text v2-footer__text--mobile-spacing">W SUNSET BLVD</h2>
          <span class="v2-footer__icon-wrapper v2-footer__star-wrapper v2-footer__star-wrapper--mobile">
            {% render 'svg-star', class: 'v2-footer__icon v2-footer__star-icon v2-footer__star-icon--mobile' %}
          </span>
          <h2 class="v2-footer__text">WEST HOLLYWOOD</h2>
        </div>
        <div class="v2-footer__mobile-row">
          <span class="v2-footer__icon-wrapper v2-footer__ca-state-wrapper">
            {% render 'svg-ca-state', class: 'v2-footer__icon v2-footer__ca-state-icon v2-footer__ca-state-icon--mobile' %}
          </span>
          <h2 class="v2-footer__text v2-footer__text--small v2-footer__text--mobile-spacing">PUMPING GAS SINCE 87</h2>
        </div>
        <div class="v2-footer__mobile-row">
          <h2 class="v2-footer__text v2-footer__text--small">PUSHING CULTURE UNTIL</h2>
          <span class="v2-footer__icon-wrapper v2-footer__infinity-wrapper v2-footer__infinity-wrapper--mobile">
            {% render 'svg-infinity', class: 'v2-footer__icon v2-footer__infinity-icon v2-footer__infinity-icon--mobile' %}
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "V2 Footer",
  "tag": "section",
  "class": "v2-footer-wrapper",
  "settings": [ 
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "V2 Footer",
      "category": "Footer"
    }
  ]
}
{% endschema %} 

{% stylesheet %}
  /* Base Footer Styles */
  .v2-footer {
    padding-top: 60px;
    padding-bottom: 60px;
    background-color: var(--color-bg);
    color: var(--color-contrast-higher);
  }

  /* Desktop/Mobile Containers */
  .v2-footer__desktop {
    display: none;
  }

  .v2-footer__mobile {
    display: block;
  }

  .v2-footer__mobile-container {
    display: flex;
    flex-direction: column;
  }

  /* Row Styles */
  .v2-footer__row {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    white-space: nowrap;
    font-size: 1.75rem;
    line-height: 2.5rem;
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
    font-family: var(--font-header);
    font-weight: 600;
  }

  .v2-footer__mobile-row {
    display: flex;
    align-items: center;
    margin-bottom: 0.5rem;
    font-family: var(--font-header);
    font-weight: 600;
    font-size: 1rem;
    line-height: 1.75rem;
    letter-spacing: -0.02em;
  }

  /* Text Styles */
  .v2-footer__text {
    margin: 0;
    font-family: var(--font-header);
    font-weight: 600;
    font-size: inherit;
    line-height: inherit;
    letter-spacing: inherit;
  }

  .v2-footer__text--spacing {
    margin-left: 0.5rem;
    margin-right: 0.5rem;
  }

  .v2-footer__text--wide-spacing {
    margin-left: 1rem;
    margin-right: 1rem;
  }

  .v2-footer__text--mobile-spacing {
    margin-left: 0.5rem;
  }

  .v2-footer__text--small {
    font-size: 0.875rem;
  }

  /* Icon Wrapper Base Styles */
  .v2-footer__icon-wrapper {
    display: inline-flex;
    align-items: center;
    vertical-align: middle;
  }

  /* Diamond W Icon */
  .v2-footer__diamond-w-icon {
    width: 40px;
    height: 40px;
  }

  .v2-footer__diamond-w-icon--mobile {
    width: 30px;
    height: 30px;
  }

  /* Coordinates Icon */
  .v2-footer__coordinates-wrapper {
    font-size: 0.75rem;
    letter-spacing: 0;
  }

  .v2-footer__coordinates-wrapper--spacing {
    margin-left: 0.5rem;
    margin-right: 0.5rem;
  }

  .v2-footer__coordinates-icon {
    width: 20px;
    height: 12px;
  }

  /* Star Icon */
  .v2-footer__star-wrapper--spacing {
    margin-left: 0.5rem;
    margin-right: 0.5rem;
  }

  .v2-footer__star-wrapper--mobile {
    margin-right: 0.25rem;
  }

  .v2-footer__star-icon {
    width: 24px;
    height: 24px;
  }

  .v2-footer__star-icon--mobile {
    width: 20px;
    height: 20px;
  }

  /* CA State Icon */
  .v2-footer__ca-state-wrapper {
    margin-left: 1rem;
  }

  .v2-footer__ca-state-icon {
    width: 60px;
    height: auto;
  }

  .v2-footer__ca-state-icon--mobile {
    width: 40px;
  }

  /* Year 96 Icon */
  .v2-footer__year-96-wrapper {
    margin-left: 0.5rem;
    margin-right: 0.5rem;
  }

  .v2-footer__year-96-icon {
    width: 70px;
    height: auto;
  }

  /* Infinity Icon */
  .v2-footer__infinity-wrapper {
    margin-left: 0.5rem;
  }

  .v2-footer__infinity-wrapper--mobile {
    margin-left: 0.5rem;
  }

  .v2-footer__infinity-icon {
    width: 40px;
    height: auto;
  }

  .v2-footer__infinity-icon--mobile {
    width: 30px;
  }

  /* SVG color inheritance */
  .v2-footer svg {
    color: currentColor;
  }

  /* Desktop styles (768px and up) */
  @media screen and (min-width: 768px) {
    .v2-footer__desktop {
      display: block;
    }

    .v2-footer__mobile {
      display: none;
    }
  }

  /* Mobile styles (below 768px) */
  @media screen and (max-width: 767px) {
    .v2-footer {
      padding-top: 40px;
      padding-bottom: 40px;
    }

    .v2-footer__mobile-row {
      margin-top: -.5em;
    }

    .v2-footer__star-wrapper {
      height: 50px;
    }

    .v2-footer h2 {
      font-size: 25px !important;
    }

    .v2-footer svg {
      transform: scale(0.7);
    }
  }
{% endstylesheet %}
